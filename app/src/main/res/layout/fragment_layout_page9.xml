<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40sp"
            android:id="@+id/tvClose"
            android:layout_gravity="end"


            android:background="@drawable/ic_close_black_24dp"
            android:layout_height="40sp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_marginLeft="@dimen/Margin10dp"
            android:layout_marginTop="@dimen/Margin10dp"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:layout_marginRight="@dimen/Margin10dp"
            android:background="@color/bg_color"
            android:orientation="vertical">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="5">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="@dimen/Margin50dp"
                        android:layout_height="@dimen/Margin50dp"
                        android:layout_gravity="center|start"
                        android:background="@drawable/red_circle"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/margin25dp"
                            android:layout_height="@dimen/margin25dp"
                            android:background="@drawable/ic_bookmark_black_24dp"
                            android:backgroundTint="@color/white"
                            android:rotation="180" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="@dimen/meeting_report300"
                    android:orientation="vertical">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:fontFamily="@font/montserrat_b"
                        android:gravity="center|start"
                        android:text="#ODR6549842"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_edit"
                        app:fontFamily="@font/montserrat_b"

                        tools:ignore="SpUsage" />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:gravity="center|start"
                        android:id="@+id/vendorName"
                        android:text="Consignor "
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:fontFamily="@font/montserrat_b"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpUsage" />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:alpha=".7"
                        android:gravity="center|start"
                        android:text="2.5 Km away from you"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten"
                        app:fontFamily="@font/montserrat"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpUsage" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/Margin10dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginTop="@dimen/Margin10dp"
            android:text="  Delivery Goods To"
            android:textColor="@color/black"
            android:textStyle="bold" />
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
  android:layout_weight="1"
        android:padding="@dimen/Margin5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Customer Name : "
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:layout_marginRight="@dimen/Margin10dp"
            android:gravity="start"
            android:text="Lorium Lipsum Name" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:gravity="end"
        android:padding="@dimen/Margin5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Mobile Number : "
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvCustomerMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:layout_marginRight="@dimen/Margin10dp"
            android:gravity="start"
            android:text="+91 645 645 xxxx" />


    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:weightSum="5"
                android:padding="@dimen/Margin5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Customer Address : "
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvCustomerAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginEnd="@dimen/Margin10dp"
                    android:layout_marginRight="@dimen/Margin10dp"
                    android:gravity="start"
                    android:text="56, Loreum Colony, Lorem \nStreet,City Name - 456664" />


            </LinearLayout>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/Margin10dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:weightSum="5"
                android:padding="@dimen/Margin5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"

                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:text="Shop Name : "
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvShopName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_marginEnd="@dimen/Margin10dp"
                            android:layout_marginRight="@dimen/Margin10dp"
                            android:gravity="start"
                            android:text="Lorium Lipsum Name" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:gravity="end"

                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:text="Mobile Number : "
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvVendorNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_marginEnd="@dimen/Margin10dp"
                            android:layout_marginRight="@dimen/Margin10dp"
                            android:gravity="start"
                            android:text="+91 645 645 xxxx" />


                    </LinearLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shop Address : "
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvShopAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"

                    android:layout_marginEnd="@dimen/Margin10dp"
                    android:layout_marginRight="@dimen/Margin10dp"
                    android:gravity="start|center"
                    android:layout_gravity="center|start"
                    android:text=" " />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:weightSum="5"
                android:padding="@dimen/Margin5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Instruction : "
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/instructionList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"

                    android:layout_marginEnd="@dimen/Margin10dp"
                    android:layout_marginRight="@dimen/Margin10dp"
                    android:gravity="start|center"
                    android:layout_gravity="center|start"
                    android:text="infancy. Various versions have evolved over the years, sometimes by accident, sometimes on purpose" />


            </LinearLayout>




        </TableLayout>
        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/Margin10dp"
            android:background="?android:attr/listDivider" />

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/Margin10dp">

                <TextView
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginStart="@dimen/Margin10dp"
                    android:layout_marginLeft="@dimen/Margin10dp"
                    android:text="Payment Method : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/payMode"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginEnd="@dimen/Margin10dp"
                    android:layout_marginRight="@dimen/Margin10dp"
                    android:gravity="end"
                    android:text="Cash (COD)" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginStart="@dimen/Margin10dp"
                    android:layout_marginLeft="@dimen/Margin10dp"
                    android:text="Amount : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/toAmt"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginEnd="@dimen/Margin10dp"
                    android:layout_marginRight="@dimen/Margin10dp"
                    android:gravity="end"

                    android:fontFamily="@font/montserrat_b"
                    android:text="732"
                    android:textColor="@color/green" />
            </TableRow>
        </TableLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tvReject"
                    android:layout_margin="@dimen/Margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/Margin15dp"
                    android:text="Reject"
                    android:textAllCaps="false"  />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tvAccept"
                    android:layout_margin="@dimen/Margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/Margin15dp"
                    android:text="Complete"

                    android:backgroundTint="@color/green"
                    android:textAllCaps="false"  />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_marginEnd="@dimen/Margin5dp"
            android:layout_marginStart="@dimen/Margin5dp"
            android:layout_marginTop="@dimen/Margin20dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/enterAmt"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage"

                android:hint="Enter Cash Amount ">

                <com.google.android.material.textfield.TextInputEditText


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/enterOtp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage"

                android:hint="Enter OTP ">

                <com.google.android.material.textfield.TextInputEditText
android:maxLength="4"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="5"
                android:padding="@dimen/Margin5dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="25sp"
                    android:id="@+id/tvCheckBox"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:layout_height="25sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:padding="3sp"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    android:text="Please Accept Terms \u0026 Condition"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_gravity="end|center"
                android:gravity="end|center"
                android:text="Send Otp"
                android:layout_marginEnd="@dimen/Margin5dp"


                app:backgroundTint="@color/colorPrimary" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelivered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/Margin5dp"
                android:text="Complete your order"
                android:textAllCaps="false"
                android:layout_marginBottom="50sp"
                android:padding="@dimen/Margin15dp"
                app:backgroundTint="@color/green" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn"
                android:layout_margin="@dimen/Margin5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/Margin15dp"
                android:visibility="gone"
                android:text="Collect Cash And Relase "
                android:textAllCaps="false"  />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>




</androidx.appcompat.widget.LinearLayoutCompat>